@using OnlineShoppp.Models
@model IEnumerable<ProductTypes>
@{ 
    ViewData["Tittle"] = "Index";
}
<br/><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Types</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">New Product Type</a>
    </div>
</div>
<br/>
<div>
    <table class="table table-striped border">
        <tr class=" table-active">
            <th>
                @Html.DisplayNameFor(c => c.ProductType)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductType</td>
                <td>
                    
                    <partial name="_ButtonPartial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
    
    
    
</div>